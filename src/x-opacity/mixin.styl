/**
 * x-opacity
 * @link css-tricks.com/almanac/properties/o/opacity/
 */
x-opacity($opacity) {
	$opacityIE = $opacity * 100;
	opacity: $opacity;
	-ms-filter unquote('progid=DXImageTransform.Microsoft.Alpha(Opacity=' + $opacityIE + ')'); // IE 8 & 9
	filter unquote('alpha(opacity=' + $opacityIE + ')'); // IE 6 & 7
}